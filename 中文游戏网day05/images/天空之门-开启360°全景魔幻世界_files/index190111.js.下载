$("#stzx-nav li").each(function(index) { 
	$(this).click(function() { 
		$("#stzx-nav li.tabFocus").removeClass("tabFocus"); 
		$(this).addClass("tabFocus"); 
		$("#stzx li:eq(" + index + ")").show()
		.siblings().hide();
	});
});
