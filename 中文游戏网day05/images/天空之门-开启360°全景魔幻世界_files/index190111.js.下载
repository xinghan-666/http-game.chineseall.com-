function() {
	$(".bottom-yuyue-conshow").removeClass("dropHide");
	$(".bottom-yuyue-sm").addClass("dropHide");
});

//职业手风琴效果
//职业01点击
$(".zhiye01-tit").click(function(){
	$(".zhiye02-con,.zhiye03-con,.zhiye04-con,.zhiye02-video,.zhiye03-video,.zhiye04-video").hide();
	$(".zhiye02-tit").css("top","460px");
	$(".zhiye03-tit").css("top","560px");
	$(".zhiye04-tit").css("top","660px");
	$(".zhiye01-con").css({"top":"220px","display":"block"});
	$(".zhiye01-video").css("display","block");
});
//职业02点击	
$(".zhiye02-tit").click(function(){
	$(".zhiye01-con,.zhiye03-con,.zhiye04-con,.zhiye01-video,.zhiye03-video,.zhiye04-video").hide();
	$(".zhiye02-tit").css("top","255px");
	$(".zhiye03-tit").css("top","560px");
	$(".zhiye04-tit").css("top","660px");
	$(".zhiye02-con").css({"top":"320px","display":"block"});
	$(".zhiye02-video").css("display","block");
});
//职业03点击
$(".zhiye03-tit").click(function(){
	$(".zhiye01-con,.zhiye02-con,.zhiye04-con,.zhiye01-video,.zhiye02-video,.zhiye04-video").hide();
	$(".zhiye02-tit").css("top","255px");
	$(".zhiye03-tit").css("top","355px");
	$(".zhiye04-tit").css("top","660px");
	$(".zhiye03-con").css({"top":"420px","display":"block"});
	$(".zhiye03-video").css("display","block");
});	
//职业04点击	
$(".zhiye04-tit").click(function(){
	$(".zhiye01-con,.zhiye02-con,.zhiye03-con,.zhiye01-video,.zhiye02-video,.zhiye03-video").hide();
	$(".zhiye02-tit").css("top","255px");
	$(".zhiye03-tit").css("top","355px");
	$(".zhiye04-tit").css("top","455px");
	$(".zhiye04-con").css({"top":"520px","display":"block"});
	$(".zhiye04-video").css("display","block");
});		
//加技能职业01
$(".zhiye01-skill-top").mouseover(function(){
	$(".zhiye01-tips,.zhiye02-tit,.zhiye03-tit,.zhiye04-tit").hide();
	$(".skill").addClass("skill-show");
	$(".zhiye01-skill-other").show();
});	
$(".zhiye01-skill").mouseleave(function(){
	$(".zhiye01-tips,.zhiye02-tit,.zhiye03-tit,.zhiye04-tit").show();
	$(".skill").removeClass("skill-show");
	$(".zhiye01-skill-other").hide();	
});
//加技能职业02
$(".zhiye02-skill-top").mouseover(function(){
	$(".zhiye02-tips,.zhiye01-tit,.zhiye03-tit,.zhiye04-tit").hide();
	$(".zhiye02-tit").css("top","155px");
	$(".zhiye02-con").css("top","220px");
	$(".skill").addClass("skill-show");
	$(".zhiye02-skill-other").show();
});	
$(".zhiye02-skill").mouseleave(function(){
	$(".zhiye02-skill-other").hide();
	$(".skill").removeClass("skill-show");
	$(".zhiye02-tips,.zhiye01-tit,.zhiye03-tit,.zhiye04-tit").show();
	$(".zhiye02-tit").css("top","255px");
	$(".zhiye02-con").css("top","320px");	
});	
